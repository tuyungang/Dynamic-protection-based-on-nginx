static void ngx_http_myproxy_start_thread_pool(ngx_conf_t *cf, ngx_http_proxy_loc_conf_t *conf)
{
    ngx_http_proxy_loc_conf_t *mycf = conf;
    if (mycf->m_idx == 1) {
        //TODO:
        if (ngx_http_myproxy_init_shmem(cf) != NGX_OK) {

        }

        ngx_str_t myisalive = ngx_string("/var/run/myisalive.flag");
        if (ngx_http_myproxy_create_aliveflagfile(&myisalive, cf->log) != NGX_OK) {
            return;
        }

        ngx_mypid = ngx_getpid();
        ngx_str_t mypid = ngx_string("/var/run/mynginx.pid");
        if (ngx_http_myproxy_create_pidfile(&mypid, cf->log) != NGX_OK) {
            return;
        }
        ngx_threadpool_conf_t thread_conf = {10,0,0};
        threadpool_ptr = ngx_threadpool_init(&thread_conf);
        if (threadpool_ptr == NULL) {
            return;
        }

        //ngx_http_myproxy_kafka_producer_init();
        //ngx_socket_t ngx_sockfd = ngx_http_myproxy_start_socket();

        int m_epollfd = epoll_create(5);
        assert( m_epollfd != -1 );
        socketpair(PF_UNIX, SOCK_STREAM, 0, sig_pipefd);
        ngx_http_myproxy_set_fd_attr(sig_pipefd[1], 0);
        ngx_http_myproxy_add_epoll_fd(m_epollfd, sig_pipefd[0]);
        //ngx_http_myproxy_add_epoll_fd(m_epollfd, ngx_sockfd);
        ngx_http_myproxy_add_signal( SIGQUIT, ngx_http_myproxy_sig_handler, 1);
        ngx_http_myproxy_add_signal( SIGWINCH, ngx_http_myproxy_sig_handler, 1);
        ngx_http_myproxy_add_signal( SIGHUP, ngx_http_myproxy_sig_handler, 1);
        ngx_http_myproxy_add_signal( SIGCHLD, ngx_http_myproxy_sig_handler, 1);
        ngx_http_myproxy_add_signal( SIGTERM, ngx_http_myproxy_sig_handler, 1);
        ngx_http_myproxy_add_signal( SIGINT, ngx_http_myproxy_sig_handler, 1);
        ngx_http_myproxy_add_signal( SIGALRM, ngx_http_myproxy_sig_handler, 1);
        ngx_http_myproxy_add_signal( SIGIO, ngx_http_myproxy_sig_handler, 1);
        //ngx_http_myproxy_add_signal( SIGINFO, ngx_http_myproxy_sig_handler, 1);
        ngx_http_myproxy_add_signal( SIGXCPU, ngx_http_myproxy_sig_handler, 1);
        ngx_http_myproxy_add_signal( SIGUSR1, ngx_http_myproxy_sig_handler, 1);
        ngx_http_myproxy_add_signal( SIGUSR2, ngx_http_myproxy_sig_handler, 1);
        ngx_http_myproxy_add_signal( SIGPIPE, SIG_IGN, 1);
        ngx_http_myproxy_add_signal( SIGSYS, SIG_IGN, 1);

        int pipefd = m_pipefd[1];
        ngx_http_myproxy_add_epoll_fd(m_epollfd, pipefd);
        struct epoll_event events[MAX_EVENT_NUMBER];
        int number = 0, m_stop = 1, ret = -1, m_read_idx = 0;
        char buf[2048];
        memset(buf, '\0', 2048);
        while (m_stop == 1) {
            number = epoll_wait(m_epollfd, events, MAX_EVENT_NUMBER, -1);
            if (( number < 0 ) && ( errno != EINTR )){
                printf( "epoll failure\n" );
                break;
            }
            int i = 0;
            for (; i < number; i++) {
                int sockfd = events[i].data.fd;
                /*
                if (sockfd == ngx_sockfd) {
                    struct sockaddr_in client_address;
                    socklen_t client_addrlength = sizeof( client_address );
                    ngx_socket_t ngx_connfd = accept(ngx_sockfd, (struct sockaddr* )&client_address, &client_addrlength);
                    if ( ngx_connfd < 0 )
                    {
                        printf("errno is: %d\n", errno);
                        continue;
                    }
                }
                else */
                if ((sockfd == pipefd) && (events[i].events & EPOLLIN)) {
                    ngx_task_t *task = NULL;
                    task = (ngx_task_t *)malloc(sizeof(ngx_task_t));
                    //task->handler = ngx_http_myproxy_kafka_producer;
                    task->handler = ngx_http_myproxy_check_parse_url;
                    task->argv = NULL;
                    memset(task->m_TaskBuf, '\0', 2048);
                    while (1) {
                        ret = recv(sockfd + m_read_idx, buf, 2048, 0);
                        //ret = read(sockfd, buf, 1024);
                        if (ret < 0) {
                            if (errno == EAGAIN || errno == EWOULDBLOCK) {
                                break;
                            }
                            else {
                                //printf("socketpair pipefd error\n");
                                break;
                            }
                        }
                        else if (ret == 0) {
                            printf("socketpair pipefd closed\n");
                            break;
                        }
                        else if (ret > 0) {
                            //TODO:
                            m_read_idx += ret;
                            strncpy(task->m_TaskBuf, buf, m_read_idx);
                            ngx_threadpool_add_task(threadpool_ptr, task);
                            //ngx_threadpool_add_task(threadpool_ptr, ngx_http_myproxy_kafka_producer, (void*)buf);
                        }
                    }
                }
                else if ((sockfd == sig_pipefd[0]) && (events[i].events & EPOLLIN)) {
                    char signals[1024];
                    ret = recv(sig_pipefd[0], signals, sizeof(signals), 0);
                    if (ret <= 0) {
                        continue;
                    }
                    else {
                        int i = 0;
                        for (; i < ret; ++i) {
                            switch (signals[i])
                            {
                                case SIGTERM:
                                case SIGINT:
                                case SIGCHLD:
                                case SIGQUIT:
                                case SIGWINCH:
                                case SIGHUP:
                                //case SIGINFO:
                                case SIGXCPU:
                                case SIGUSR1:
                                case SIGUSR2:
                                case SIGIO:
                                case SIGALRM:
                                {
                                    ngx_threadpool_destroy(threadpool_ptr);
                                    m_stop = -1;
                                    //rd_kafka_topic_destroy(rkt);
                                    //rd_kafka_destroy(rk);
                                    printf("destroy normally\n");
                                    break;
                                }
                                default:
                                {
                                    break;
                                }
                            }
                        }
                    }
                }
            }
            memset(buf, '\0', 2048);
            m_read_idx = 0;
        }
        close(pipefd);
        close(m_epollfd);

        if (access("/var/run/myisalive.flag", F_OK) == 0) {
            if (ngx_delete_file(myisalive.data) == NGX_FILE_ERROR) {
                ngx_log_error(NGX_LOG_ALERT, cf->log, ngx_errno,
                                            ngx_delete_file_n " \"%s\" failed", myisalive.data);
            }
        }

        if (access("/var/run/mynginx.pid", F_OK) == 0) {
            if (ngx_delete_file(mypid.data) == NGX_FILE_ERROR) {
                ngx_log_error(NGX_LOG_ALERT, cf->log, ngx_errno,
                                            ngx_delete_file_n " \"%s\" failed", mypid.data);
            }
        }

        printf("my process exit sucessfully\n");
        exit(0);
    }
    return;
}

