static void ngx_http_myproxy_body_handler(ngx_http_request_t *r)
{
    size_t offset = 0;
    ngx_uint_t i = 0;
    ngx_str_t body;
    u_char ngx_send_data[4096] = {0};
    //request line
    ngx_memcpy(ngx_send_data + offset, r->request_line.data, r->request_line.len);
    offset += r->request_line.len;
    ngx_memcpy(ngx_send_data + offset, "\r\n", ngx_strlen("\r\n"));
    offset += ngx_strlen("\r\n");
    //ngx_log_error(NGX_LOG_ERR, r->connection->log, 0, "request line:%s", ngx_send_data);

    //header
    ngx_list_part_t *part = &r->headers_in.headers.part;
    ngx_table_elt_t *header = part->elts;
    for ( ;; ) {
        if (i >= part->nelts) {
            if (part->next == NULL) {
                break;
            }
            part = part->next;
            header = part->elts;
            i = 0;
        }
        if (header[i].hash == 0) {
            continue;
        }
        ngx_memcpy(ngx_send_data + offset, header[i].key.data, header[i].key.len);
        offset += header[i].key.len;
        ngx_memcpy(ngx_send_data + offset, ":", ngx_strlen(":"));
        offset += ngx_strlen(":");
        ngx_memcpy(ngx_send_data + offset, header[i].value.data, header[i].value.len);
        offset += header[i].value.len;
        ngx_memcpy(ngx_send_data + offset, "\r\n", ngx_strlen("\r\n"));
        offset += ngx_strlen("\r\n");
        i++;
    }
    ngx_memcpy(ngx_send_data + offset, "\r\n", ngx_strlen("\r\n"));
    offset += ngx_strlen("\r\n");

    //body
    ngx_http_request_body_t *rb = r->request_body;
    //ngx_str_t body;
    if (rb && rb->bufs) {
        body.data = (u_char*)rb->bufs->buf->pos;
        body.len = rb->bufs->buf->last - rb->bufs->buf->pos;
        ngx_memcpy(ngx_send_data + offset, body.data, body.len);
        offset += body.len;
    }
    else{
        //ngx_log_error(NGX_LOG_ERR, r->connection->log, 0, "request_body:%s", "request_body_NULL");
    }

    //ngx_log_error(NGX_LOG_ERR, r->connection->log, 0, "request data:%s", ngx_send_data);

    //TODO:
    ngx_int_t ret = ngx_http_myproxy_check_invalid_in_blacklist_database(r, &body);
    if (ret == 1) {
        ngx_http_finalize_request(r, NGX_HTTP_FORBIDDEN);
    }
    else {
        send(m_pipefd[0], ngx_send_data, offset, 0);
        /*
        size_t byte_len = write(m_pipefd[0], ngx_send_data, offset);
        if (byte_len == offset) {
            ngx_log_error(NGX_LOG_ERR, r->connection->log, 0, "write data len:%d", byte_len);
        }
        */
        //ngx_http_myproxy_recover_url(r);
        ngx_http_upstream_init(r);
    }
}

